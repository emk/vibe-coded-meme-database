{
  "name": "meme-db",
  "version": "1.0.0",
  "description": "A single-user database for storing, indexing and searching meme images",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:client": "cd src/client && vite build",
    "dev": "nodemon --signal SIGTERM --exec ts-node src/index.ts",
    "dev:client": "cd src/client && vite",
    "start": "node dist/index.js",
    "serve": "npm run build && npm run start",
    "dev:all": "concurrently --kill-others \"npm run dev\" \"npm run dev:client\"",
    "import": "ts-node src/scripts/import.ts",
    "analyze": "ts-node src/scripts/analyze.ts",
    "clear-db": "ts-node src/scripts/clear-db.ts",
    "update-schema": "typescript-json-schema --required src/services/meme-analysis.ts MemeAnalysis -o src/services/meme-analysis.json",
    "migrate": "ts-node src/scripts/migrate.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "test:server": "jest --testPathPattern='test/(api|services)'",
    "test:client": "jest --config=jest.client.config.js",
    "test": "npm run test:server && npm run test:client",
    "check": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "memes",
    "database",
    "ollama",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.19",
    "@types/react-dom": "^18.3.5",
    "archiver": "^7.0.1",
    "better-sqlite3": "^11.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "kysely": "^0.27.6",
    "ollama": "^0.5.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.2.6",
    "typescript-json-schema": "^0.65.1",
    "vite": "^6.2.2"
  }
}
